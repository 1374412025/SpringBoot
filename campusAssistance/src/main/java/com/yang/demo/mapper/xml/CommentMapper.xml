<mapper namespace="com.yang.demo.mapper.CommentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yang.demo.pojo.Comment">
        <result column="post_id" property="postId" />
        <result column="user_openid" property="userOpenid" />
        <result column="comment_id" property="commentId" />
        <result column="comment_content" property="commentContent" />
        <result column="comment_date" property="commentDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        post_id, user_openid, comment_id, comment_content, comment_date
    </sql>

</mapper>
